            <label  class="form-check-label col-sm-2"></label>
            <div class='col-sm-9'>
                <input class="form-check-input" asp-for="Enable" /> @Html.DisplayNameFor(model => model.Enable)
            </div>
        </div>*@

                    <div class="modal" id="goldentips" tabindex="-1" role="dialog">
